@model Tuan06.Models.Product
@{
  ViewData["Title"] = "Thêm sản phẩm";
}

<div class="container mt-4">
  <h2 class="mb-4 text-center text-primary">
    <i class="bi bi-plus-circle"></i> Thêm sản phẩm mới
  </h2>

  <form asp-action="Add" method="post" class="shadow p-4 rounded bg-light">

    <div class="row mb-3">
      <div class="col-md-6">
        <label asp-for="TenSP" class="form-label">Tên sản phẩm</label>
        <input asp-for="TenSP" class="form-control" placeholder="Nhập tên sản phẩm" required />
        <span asp-validation-for="TenSP" class="text-danger"></span>
      </div>
      <div class="col-md-3">
        <label asp-for="DonGia" class="form-label">Đơn giá</label>
        <input asp-for="DonGia" type="number" class="form-control" placeholder="VD: 350000" required />
        <span asp-validation-for="DonGia" class="text-danger"></span>
      </div>
      <div class="col-md-3">
        <label asp-for="DonGiaKhuyenMai" class="form-label">Đơn giá KM</label>
        <input asp-for="DonGiaKhuyenMai" type="number" class="form-control" placeholder="VD: 270000" required />
        <span asp-validation-for="DonGiaKhuyenMai" class="text-danger"></span>
      </div>
    </div>

    <div class="mb-3">
      <label asp-for="HinhAnh" class="form-label">Đường dẫn hình ảnh</label>
      <input asp-for="HinhAnh" class="form-control" placeholder="VD: user/images/p1.jpg" />
      <span asp-validation-for="HinhAnh" class="text-danger"></span>
    </div>

    <div class="mb-3">
      <label asp-for="MoTa" class="form-label">Mô tả sản phẩm</label>
      <textarea asp-for="MoTa" class="form-control" rows="4" placeholder="Nhập mô tả chi tiết..."></textarea>
      <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>

    <div class="mb-3">
      <label asp-for="LoaiSP" class="form-label">Loại sản phẩm</label>
      <input asp-for="LoaiSP" class="form-control" placeholder="VD: Đèn trang trí" />
      <span asp-validation-for="LoaiSP" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between mt-4">
      <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
      </a>
      <button type="submit" class="btn btn-primary">
        <i class="bi bi-save"></i> Lưu sản phẩm
      </button>
    </div>
  </form>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
